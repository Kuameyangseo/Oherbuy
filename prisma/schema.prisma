datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model images{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  file_id String
  url String
  users users? @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId @unique
  shopId String? @unique @db.ObjectId
  shops shops? @relation(fields: [shopId], references: [id])
}

model users {
  id        String   @id @map("_id") @db.ObjectId @default(cuid())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  String
  updatedAt DateTime @updatedAt
  avatar   images?
  following String[]
  shopReviews shopReviews[]
  country   String
}

model shopReviews{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId @unique
  user  users  @relation(fields: [userId], references: [id])
  rating Float
  reviews String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shopsId String @db.ObjectId
  shops  shops? @relation(fields: [shopsId], references: [id])
}

model shops{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  bio       String?
  category  String
  avatar   images? 
  coverBanner String?
  address String
  opening_hours String?
  website String?
  socialLinks Json[]
  ratings Float @default(0)
  reviews shopReviews[]
  sellerId String? @unique @db.ObjectId   // changed to optional
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  seller sellers? @relation(fields: [sellerId], references: [id])
}
model sellers {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  country   String
  password  String
  updatedAt DateTime @updatedAt
  phone_number String
  stripeId String
  shop    shops?
  paystackSubaccount String?
}

